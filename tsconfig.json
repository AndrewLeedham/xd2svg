{
  "compilerOptions": {
    "module": "es2015",
    "moduleResolution": "node",
    "lib": [
      "es2018",
      "dom"
    ],
    "types": [
      "node"
    ],
    "target": "es2016",
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "allowJs": true,
    "typeRoots": [
      "node_modules/@types"
    ]
  }
}
