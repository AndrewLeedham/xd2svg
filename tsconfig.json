{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noUnusedParameters": false,
    "noUnusedLocals": false,
    "removeComments": true,
    "outDir": "dist",
    "baseUrl": "src",
    "rootDir": "src",
    "sourceRoot": "src",
    "lib": [
      "es2017",
      "dom"
    ],
    "types": [
      "node"
    ],
    "target": "es2016",
    "sourceMap": true,
    "typeRoots": [
      "node_modules/@types"
    ]
  }
}
